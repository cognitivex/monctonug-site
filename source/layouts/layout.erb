<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title>
      <%= [current_page.data.title, data.strings.title].compact.join(" - ") %>
    </title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            <%= data.strings.title %>
          </a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to "About", "/about.html" %></li>
            <li><%= link_to "Sponsors", "/sponsors.html" %></li>
            <li><%= link_to "Subscribe", "/subscribe.html" %></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container page">
      <div class="row">
        <div class="col-xs-12">
          <%= yield %>
        </div>
      </div>
    </div>

    <nav class="navbar navbar-inverse navbar-footer">
      <div class="container">
        <div class="navbar-text">
          Copyright &copy; 2015 <%= data.strings.title %>
        </div>
      </div>
    </nav>

  </body>
</html>
